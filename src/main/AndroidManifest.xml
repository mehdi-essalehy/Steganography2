<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.project.steganography2">
    <!-- Declaring the required permissions -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="28"
        tools:ignore="ScopedStorage" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Steganography2">
        <activity
            android:name=".ImageExtraction"
            android:exported="false" />
        <activity
            android:name=".ImageInsertion"
            android:exported="false" />
        <activity
            android:name=".ImageFileSelectionForExtraction"
            android:exported="false" />
        <activity
            android:name=".ImageFileSelectionForInsertion"
            android:exported="false" />
        <activity
            android:name=".TextExtraction"
            android:exported="false" />
        <activity
            android:name=".TextInsertion"
            android:exported="false" />
        <activity
            android:name=".TextFileSelectionForExtraction"
            android:exported="false" />
        <activity
            android:name=".TextFileSelectionForInsertion"
            android:exported="false" />
        <activity
            android:name=".ImageInsertionExtraction"
            android:exported="false" />
        <activity
            android:name=".TextInsertionExtraction"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>